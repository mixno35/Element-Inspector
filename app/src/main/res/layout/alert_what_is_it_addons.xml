<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_what_is_it"
            android:fontFamily="@font/ds_font_bold"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/title_remove"/>

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/ic_alert_close"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorControlNormal"
            android:id="@+id/ivClose"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/menucodeTextView1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_what_is_it_addons"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/cardViewBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textManifest"
                        android:textSize="11sp"
                        android:textIsSelectable="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|right">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:stateListAnimator="@null"
                            android:text="@string/action_create_addon"
                            android:layout_marginTop="15dp"
                            android:id="@+id/buttonCreateAddon"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:stateListAnimator="@null"
                            android:text="@string/action_copy"
                            android:layout_marginTop="15dp"
                            android:id="@+id/buttonCopy"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_manifest_addons"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:textSize="12sp"
                    android:id="@+id/textManifestDescription"
                    android:textStyle="italic"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>

